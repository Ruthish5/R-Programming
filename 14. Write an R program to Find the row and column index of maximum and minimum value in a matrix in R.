my_matrix <- matrix(c(4, 2, 9, 7, 5, 6, 3, 8, 1), nrow = 3, byrow = TRUE)
cat("Matrix:\n")
print(my_matrix)
max_value_index <- which(my_matrix == max(my_matrix), arr.ind = TRUE)
min_value_index <- which(my_matrix == min(my_matrix), arr.ind = TRUE)
cat("\nIndex of Maximum Value:\n")
print(max_value_index)
cat("\nIndex of Minimum Value:\n")
print(min_value_index)
