matrix_data <- matrix(1:12, nrow = 3, ncol = 4, byrow = TRUE)
colnames(matrix_data) <- c("A", "B", "C", "D")
rownames(matrix_data) <- c("Row1", "Row2", "Row3")
row1 <- matrix_data[1, ]
col2 <- matrix_data[, 2]
element <- matrix_data[2, 3]
vector_data <- as.vector(matrix_data)
reshaped_matrix <- matrix(vector_data, nrow = 4, ncol = 3, byrow = TRUE)
sum_rows <- rowSums(matrix_data)
sum_columns <- colSums(matrix_data)
total_sum <- sum(matrix_data)
cat("Original Matrix:\n")
print(matrix_data)
cat("\nSliced Data:\n")
cat("Row 1:\n")
print(row1)
cat("Column 2:\n")
print(col2)
cat("Element at Row 2, Column 3:\n")
print(element)
cat("\nReshaped Matrix:\n")
print(reshaped_matrix)
cat("\nSums:\n")
cat("Row Sums:\n")
print(sum_rows)
cat("Column Sums:\n")
print(sum_columns)
cat("Total Sum:\n")
print(total_sum)
